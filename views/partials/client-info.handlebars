    <h3 class="mt-3">Personal Information</h3>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="clientFirstName">First Name</label>
        <input type="text" class="form-control" id="clientFirstName" value="{{ first_name }}" readonly/>
      </div>
      <div class="form-group col-md-6">
        <label for="clientLastName">Last Name</label>
        <input type="text" class="form-control" id="clientLastName" value="{{ last_name }}" readonly/>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-2 text-center">
        <div class="form-check">
          {{#if active}}
            <input class="form-check-input" type="checkbox" id="clientActive" value="true" checked readonly/>
          {{else}}
            <input class="form-check-input" type="checkbox" id="clientActive" value="false" readonly/>
          {{/if}}
          <label class="form-check-label" for="clientActive">
            Active
          </label>
        </div>
      </div>
      <div class="form-group col-md-4">
        <label for="clientDob">Date of Birth</label>
        <input type="date" class="form-control" id="clientDob" value="{{ format_date dob }}" readonly/>
      </div>
      <div class="form-group col-md-6">
        <label for="clientSsn">Social Security #</label>
        <input type="text" class="form-control" id="clientSsn" value="{{ ssn }}" readonly/>
      </div>
    </div>
    <h3 class="mt-3">Contact Information</h3>
    <div class="form-group">
      <label for="clientEmail">Email</label>
      <input type="email" class="form-control" id="clientEmail" value="{{ email }}" readonly/>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="clientPrimaryPhone">Mobile Phone</label>
        <input type="tel" class="form-control" id="clientPrimaryPhone" value="{{ primary_phone }}" readonly/>
      </div>
      <div class="form-group col-md-6">
        <label for="clientAltPhone">Other Phone</label>
        <input type="tel" class="form-control" id="clientAltPhone" value="{{ alt_phone }}" readonly/>
      </div>
    </div>
    <div class="form-group">
      <label for="clientStreetAddress">Street Address</label>
      <input type="text" class="form-control" id="clientStreetAddress" value="{{ street_address }}" readonly/>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="clientCity">City</label>
        <input type="text" class="form-control" id="clientCity" value="{{ city }}" readonly/>
      </div>
      <div class="form-group col-md-4">
        <label for="clientState">State</label>
        <input type="text" class="form-control" id="clientState" value="{{ state }}" readonly/>
      </div>
      <div class="form-group col-md-2">
        <label for="clientZip">Zip</label>
        <input type="text" class="form-control" id="clientZip" value="{{ zip }}" readonly/>
      </div>
    </div>
    <h3 class="mt-3">Additional Client Information</h3>
    <div class="form-row">
      <div class="form-group col-md-3">
          <label for="clientGender">Gender</label>
          <input type="text" class="form-control" id="clientGender" value="" readonly/>
      </div>
      <div class="form-group col-md-3">
          <label for="clientEthnicity">Ethnicity</label>
          <input type="text" class="form-control" id="clientEthnicity" value="" readonly/>
      </div>
      <div class="form-group col-md-3">
          <label for="clientRelationshipStatus">Relationship Status</label>
          <input type="text" class="form-control" id="clientRelationshipStatus" value="" readonly/>
      </div>
      <div class="form-group col-md-3">
          <label for="clientEmploymentStatus">Employment Status</label>
          <input type="text" class="form-control" id="clientEmploymentStatus" value="" readonly/>
      </div>
      <div class="form-group col-md-3">
          <label for="clientPreferredLanguage">Preferred Language</label>
          <input type="text" class="form-control" id="clientPreferredLanguage" value="" readonly/>
      </div>
      <div class="form-group col-md-3">
          <label for="clientReferredBy">Referred By</label>
          <input type="text" class="form-control" id="clientReferredBy" value="" readonly/>
      </div>
