  <form id="create-client-form">
    <h3 class="mt-3">Personal Information</h3>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="clientFirstName">First Name</label>
        <input type="text" class="form-control" id="clientFirstName" value="{{ first_name }}" />
      </div>
      <div class="form-group col-md-6">
        <label for="clientLastName">Last Name</label>
        <input type="text" class="form-control" id="clientLastName" value="{{ last_name }}" />
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-2 text-center">
        <div class="form-check">
          {{#if active}}
            <input class="form-check-input" type="checkbox" id="clientActive" value="true" checked />
          {{else}}
            <input class="form-check-input" type="checkbox" id="clientActive" value="false" />
          {{/if}}
          <label class="form-check-label" for="clientActive">
            Active
          </label>
        </div>
      </div>
      <div class="form-group col-md-4">
        <label for="clientDob">Date of Birth</label>
        <input type="date" class="form-control" id="clientDob" value="{{ format_date dob }}" />
      </div>
      <div class="form-group col-md-6">
        <label for="clientSsn">Social Security #</label>
        <input type="text" class="form-control" id="clientSsn" value="{{ ssn }}" />
      </div>
    </div>
    <h3 class="mt-3">Contact Information</h3>
    <div class="form-group">
      <label for="clientEmail">Email</label>
      <input type="email" class="form-control" id="clientEmail" value="{{ email }}" />
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="clientPrimaryPhone">Mobile Phone</label>
        <input type="phone" class="form-control" id="clientPrimaryPhone" value="{{ primary_phone }}" />
      </div>
      <div class="form-group col-md-6">
        <label for="clientAltPhone">Other Phone</label>
        <input type="phone" class="form-control" id="clientAltPhone" value="{{ alt_phone }}" />
      </div>
    </div>
    <div class="form-group">
      <label for="clientStreetAddress">Street Address</label>
      <input type="text" class="form-control" id="clientStreetAddress" value="{{ street_address }}" />
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="clientCity">City</label>
        <input type="text" class="form-control" id="clientCity" value="{{ city }}" />
      </div>
      <div class="form-group col-md-4">
        <label for="clientState">State</label>
        <input type="text" class="form-control" id="clientState" value="{{ state }}" />
      </div>
      <div class="form-group col-md-2">
        <label for="clientZip">Zip</label>
        <input type="text" class="form-control" id="clientZip" value="{{ zip }}" />
      </div>
    </div>
    <button type="submit" class="mt-4 btn btn-block text-white shadow save-info">CREATE</button>
  </form>