<div class="container my-3">
  {{#if relations.length }}
  <div class="row mt-5 mb-3 d-flex justify-content-between">
    <h4>Clients List</h4>
    <button type="button" class="btn btn-general shadow text-white" onClick="goToNewClientPage()">+ Add Client</button>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Client Id</th>
        <th scope="col">Start Date</th>
        <th scope="col">End Date</th>
      </tr>
    </thead>
    <tbody>
      {{#each relations as |relation| }}
      <tr>
        <td>
          <a href="/clients/{{ relation.client_id }}">
            <!--{{ last_name }}, {{ first_name }}-->
            {{ relation.client_id }}
          </a>
        </td>
        <td>{{ format_date relation.start_date }}</td>
        {{#if relation.end_date }}
          <td>{{ format_date relation.end_date }}</td>
        {{else}}
          <td>ongoing</td>
        {{/if}}
        <!--td><a href="mailto:{{ email }}">{{ email }}</a></td-->
        <!--td><a href="tel:{{ primary_phone }}">{{ primary_phone }}</a></td>
        {{#if active}}
          <td class="square-icon text-center"><i class="far fa-check-square"></i></td>
        {{else}}
          <td class="square-icon text-center"><i class="far fa-square"></i></td>
        {{/if}}-->
      </tr>
      {{/each}}
    </tbody>
  </table>
  {{/if}}
</div>
<script>
  function goToNewClientPage() {
    document.location.replace('/clients/new');
  }
</script>