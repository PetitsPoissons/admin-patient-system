<article class="row d-block w-100 mt-5">
  <form id="readonly">
    <p class="text-right">
      <a href="/clients/edit/{{ client.client_id }}" class="edit-link">
        Edit {{ client.first_name }} {{ client.last_name }}'s information
      </a>
    </p>

  {{> client-info client }}

  </form>
</article>

<div class="mt-3 treatments-list">
  {{#each treatments as |tx| }}
    <p>Tx Date: {{ format_date tx.tx_date }}</p>
    <p>Procedure(s):</p>
    <ul>
      {{#if tx.procedure.length }}
      {{#each tx.procedure }}
      <li>
        {{ tx.procedure.procedure_name }} ({{ tx.procedure.cpt_code }}, {{ tx.procedure.duration }})
      </li>
      {{/each}}
      {{else}}
      <li>
        {{ tx.procedure.procedure_name }} ({{ tx.procedure.cpt_code }}, {{ tx.procedure.duration }})
      </li>
      {{/if}}
    </ul>
  {{/each}}

</div> 