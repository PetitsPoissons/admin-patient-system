<div class="card w-100 mt-5">
  <div class="card-header">
    <h4>Please register your account</h4>
  </div>
  <div class="card-body">
    <form class="register-form">
      <div class="form-group">
        <label for="username-register">Username</label>
        <input type="text" class="form-control" id="username-register">
      </div>
      <div class="form-group">
        <label for="email-register">Email</label>
        <input type="email" class="form-control" id="email-register">
      </div>
      <div class="form-group">
        <label for="password-register">Password</label>
        <input type="password" class="form-control" id="password-register">
      </div>
      <button type="submit" class="btn btn-primary">LOGIN</button>
    </form>
  </div>
</div>
<script src="/js/register.js"></script>