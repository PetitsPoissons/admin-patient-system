<div class="row justify-content-md-center" style="margin-top: 100px">
    <div class="col-md-6">
        {{#if message}}
        <div class="alert {{messageClass}}" role="alert">
            {{message}}
        </div>
        {{/if}}
        <img src="https://placehold.it/800/50" class="img-fluid" alt="Responsive image">
        <form class="login-form">
            <div class="form-group">
                <label for="username-login">Username</label>
                <input name="username" type="text" class="form-control" id="username-login" placeholder="Enter your username">
            </div>
            <div class="form-group">
                <label for="password-login">Password</label>
                <input name="password" type="password" class="form-control" id="password-login"
                    placeholder="Enter your password">
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
    </div>
</div>
<script src="/js/login.js"></script>