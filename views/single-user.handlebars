<div class="container my-3">
  <div class="row mt-3 pr-3 d-flex justify-content-between">
    <h4 class="title">{{ user.first_name }} {{ user.last_name }}</h4>
    <a href="/users/edit/{{ user.user_id }}">
      <button type="button" class="btn btn-general shadow text-white" >
        Save Changes
      </button>
    </a>
  </div>

  <div class="row d-block w-100 mt-5">
    <form>
      {{> user-form user }}
    </form>
    <div class="row mx-3 mt-3">
      <h5>
        {{ user.clients_nb }} {{ format_plural "client" user.clients_nb }}:
      </h5>
      <table class="table table-hover mx-3">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">E-mail</th>
            <th scope="col">Phone</th>
            <th scope="col">Alt Phone</th>
          </tr>
        </thead>
        <tbody>
          {{#each user.clients}}
          <tr>
            <td>
              <a href="/clients/{{ client_id }}">
                {{ first_name }} {{ last_name }}
              </a>
            </td>
            <td>{{ email }}</td>
            <td>{{ primary_phone }}</td>
            <td>{{ alt_phone }}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>