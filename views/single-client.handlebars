<article class="row d-block w-100 mt-5">

  {{> client-info client }}

  <p>{{ client.first_name }} {{ client.last_name }} has {{ client.clinicians_nb }} {{ format_plural "clinician" client.clinicians_nb }} assigned.  
  </p>
  <p class="text-right">
    <a href="/clients/records/{{ client.client_id }}" class="edit-link">
      View {{ client.first_name }} {{ client.last_name }}'s records
    </a>
  </p>
</article>